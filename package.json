{
  "name": "@mythologiq/failsafe-qore",
  "version": "0.1.0",
  "description": "Standalone Qore governance runtime for FailSafe",
  "license": "MIT",
  "private": false,
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "main": "dist/runtime/api/index.js",
  "types": "dist/runtime/api/index.d.ts",
  "files": [
    "dist",
    "policy/definitions"
  ],
  "scripts": {
    "clean": "rimraf dist coverage",
    "build": "npm run clean && tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "start:ui": "node dist/zo/ui-shell/start.js",
    "start:standalone": "node dist/runtime/service/start.js",
    "zo:one-click": "bash deploy/zo/one-click-standalone.sh",
    "zo:install:full": "bash deploy/zo/install-zo-full.sh",
    "zo:update": "bash deploy/zo/update-from-repo.sh",
    "zo:update:dry-run": "bash deploy/zo/update-from-repo.sh --dry-run",
    "zo:stop": "bash deploy/zo/stop-standalone.sh",
    "zo:services": "bash deploy/zo/one-click-services.sh",
    "qorectl:doctor": "node scripts/qorectl.mjs doctor",
    "qorectl:sessions": "node scripts/qorectl.mjs sessions",
    "qorectl:devices": "node scripts/qorectl.mjs devices",
    "qorectl:revoke-all-sessions": "node scripts/qorectl.mjs revoke-sessions --all",
    "qorectl:mfa-reset": "node scripts/qorectl.mjs mfa-reset --confirm RESET_MFA",
    "zo:backup": "node scripts/zo-resilience.mjs backup",
    "zo:backups": "node scripts/zo-resilience.mjs list",
    "zo:restore:dry-run": "node scripts/zo-resilience.mjs restore --confirm RESTORE --dry-run",
    "ui:sync": "node scripts/sync-failsafe-ui.mjs",
    "ui:mfa:secret": "node scripts/generate-mfa-secret.mjs",
    "keys:rotate": "node scripts/rotate-actor-keys.mjs",
    "assumptions:check": "node scripts/check-zo-assumptions.mjs",
    "release:gate": "node scripts/release-gate.mjs",
    "verify:all": "npm run typecheck && npm run lint && npm test && npm run build && npm run assumptions:check",
    "zo:bundle": "npm run ui:sync && powershell -ExecutionPolicy Bypass -File scripts/create-zo-upload.ps1",
    "release:artifacts": "node scripts/create-release-artifacts.mjs"
  },
  "dependencies": {
    "@mythologiq/qore-contracts": "github:MythologIQ/qore-contracts#main",
    "better-sqlite3": "^12.2.0",
    "proper-lockfile": "^4.1.2",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.17.57",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
